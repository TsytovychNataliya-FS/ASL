<h1>Edit Document</h1>
<form action="/documents/{{ document.id }}" method="POST">
  <input type="hidden" name="_method" value="PUT">
  <label for="title">Title</label>
  <input type="text" id="title" name="title" value="{{ document.title }}">
  
  <label for="description">Description</label>
  <input type="text" id="description" name="description" value="{{ document.description }}">
  
  <label for="file_url">File URL</label>
  <input type="text" id="file_url" name="file_url" value="{{ document.file_url }}">
  
  <button type="submit">Save</button>
</form>
